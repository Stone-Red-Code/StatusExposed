{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "DatabasePath": "MainDatabase.sqlite",
  "LegalNotePath": "LegalNoticeTest.md",
  "ApiInfoPath": "ApiInfoTest.md",
  "AutomaticUpdates": false,
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/api/*",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "*:/api/*",
        "Period": "15m",
        "Limit": 100
      },
      {
        "Endpoint": "*:/api/*",
        "Period": "12h",
        "Limit": 1000
      },
      {
        "Endpoint": "*:/api/*",
        "Period": "7d",
        "Limit": 10000
      }
    ]
  }
}