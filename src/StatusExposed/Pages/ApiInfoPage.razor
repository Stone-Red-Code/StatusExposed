@page "/api"

@using BlazorMarkdown
@using Microsoft.Extensions.Options
@using StatusExposed.Models.Options

@inject IOptions<GeneralSettings> GeneralSettings

<HeadContent>
    <!-- HTML Meta Tags -->
    <meta name="description" content="Free StatusExposed public API">

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://status.exposed/api">
    <meta property="og:type" content="website">
    <meta property="og:title" content="StatusExposed API">
    <meta property="og:description" content="Free StatusExposed public API">

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary">
    <meta property="twitter:domain" content="status.exposed">
    <meta property="twitter:url" content="https://status.exposed/api">
    <meta name="twitter:title" content="StatusExposed API">
    <meta name="twitter:description" content="Free StatusExposed public API">
</HeadContent>

@if(File.Exists(GeneralSettings.Value.FilePaths.ApiInfoPath))
{
    <Markdown FilePath="@GeneralSettings.Value.FilePaths.ApiInfoPath"/>
}